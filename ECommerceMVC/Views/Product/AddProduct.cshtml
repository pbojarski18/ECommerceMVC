@using ECommerceMVC.Domain.Enums
@model ECommerceMVC.Application.Dtos.Products.ProductDto

<h2>Add New Product</h2>

<div class="d-flex flex-column col-6 justify-content-start align-items-center">
    <form method="post" asp-action="AddProduct">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-12">
            <label>Product Type:</label>
            <select asp-for="ProductType" class="form-control" id="productTypeSelect">
                <option value="">"Select"</option>
                <option value="1">Raquets</option>
                <option value="2">Balls</option>
                <option value="3">Bags</option>
                <option value="4">Accessories</option>
            </select>
            <span asp-validation-for="ProductType" class="text-danger"></span>
        </div>

        <div class="form-group col-12">
            <label>Name:</label>
            <input type="text" asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label>Price:</label>
            <input type="number" asp-for="Price" class="form-control" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label>Description:</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label>Image Path:</label>
            <input type="text" asp-for="ImagePath" class="form-control" />
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label>Brand:</label>
            <input type="text" asp-for="Brand" class="form-control" />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label>Sex:</label>
            <input type="text" asp-for="Sex" class="form-control" />
            <span asp-validation-for="Sex" class="text-danger"></span>
        </div>
        
        <div class="form-group col-12" id="weightField" style="display:none;">
            <label>Weight:</label>
            <input type="number" asp-for="Weight" class="form-control" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Add Product</button>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById('productTypeSelect').addEventListener('change', function () {
            var weightField = document.getElementById('weightField');
            if (this.value == "1") { // Raquets
                weightField.style.display = 'block';
            } else {
                weightField.style.display = 'none';
            }
        });
    </script>
}