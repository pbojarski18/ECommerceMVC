@model ECommerceMVC.Application.Dtos.Products.EditProductDto

<h2>Edit Product</h2>
<div class="d-flex flex-column col-6 justify-content-start align-items-center">

    <form method="post" asp-action="EditProduct">
        <input type="hidden" asp-for="Id" />
        <div class="form-group col-12">
            <label>Name:</label>
            <input type="text" asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label>Price:</label>
            <input type="number" asp-for="Price" class="form-control" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label>Description:</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label>Image Path:</label>
            <input type="text" asp-for="ImagePath" class="form-control" />
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label>Brand:</label>
            <input type="text" asp-for="Brand" class="form-control" />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>
                <button type="submit" class="btn btn-primary">Add Product</button>
    </form>
</div>